{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Linter (Pylint)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pylint",
                "--score=yes",
                "scripts/",
                "lanscape/",
                "tests/"
            ],
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell"
                    }
                }
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            },
            "osx": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            }
        },
        {
            "label": "Tag and Push Release",
            "type": "shell",
            "args": [
                "${input:releaseVersion}"
            ],
            "problemMatcher": [],
            "group": "build",
            "windows": {
                "command": "${workspaceFolder}/scripts/tag_release.ps1",
                "options": {
                    "shell": {
                        "executable": "powershell"
                    }
                }
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/tag_release.sh",
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            },
            "osx": {
                "command": "${workspaceFolder}/scripts/tag_release.sh",
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            }
        },
        {
            "label": "Run Linter (Autopep8)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "autopep8",
                "--in-place",
                "--recursive",
                ".",
                "--max-line-length",
                "100",
                "-aa"
            ],
            "problemMatcher": ["$python"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell"
                    }
                }
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            },
            "osx": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            }
        },

        {
            "label": "Tests (Pytest)",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "-n",
                "auto",
                "--dist=loadscope",
                "--maxfail=1",
                "-v"
            ],
            "problemMatcher": ["$python"],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell"
                    }
                }
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            },
            "osx": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            }
        },
        {
            "label": "Run Pytest with Coverage",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "-n",
                "auto",
                "--dist=loadscope",
                "--cov=lanscape",
                "--cov-report=html",
                "--cov-report=term-missing",
                "-v"
            ],
            "problemMatcher": ["$python"],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell"
                    }
                }
            },
            "linux": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            },
            "osx": {
                "options": {
                    "shell": {
                        "executable": "/bin/bash"
                    }
                }
            }
        }
    ],

    "inputs": [
        {
            "id": "releaseVersion",
            "type": "promptString",
            "description": "Enter release version (e.g. v1.2.3):"
        }
    ]
}